{
  "name": "dango",
  "version": "1.0.0",
  "author": "soulsam480 <soulsam480@hotmail.com>",
  "description": "functional routing controllers for express",
  "types": "index.d.ts",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "yarn workspace dango-core dev",
    "build:core": "yarn workspace dango-core build",
    "build": "yarn build:core",
    "dev:ex": "yarn workspace example dev",
    "build:ex": "yarn workspace example build",
    "release-core": "cd core && npm publish"
  },
  "workspaces": [
    "core",
    "example"
  ],
  "dependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "husky": "^6.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
